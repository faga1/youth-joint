.user {
  background: #fff;
  min-height: 100vh;
}
.user .infoBox {
  padding: 30rpx;
}
.user .infoBox .formBox {
  border: 1px solid #e4e7ed;
  border-radius: 20rpx;
  padding: 30rpx;
  -webkit-box-shadow: 0px 0px 3px #e4e7ed;
          box-shadow: 0px 0px 3px #e4e7ed;
}
.user .infoBox .formBox .FormText {
  font-size: 24rpx;
  width: 100%;
  text-align: end;
}
.user .infoBox .formBox .FormTexts {
  font-size: 24rpx;
  width: 100%;
  text-align: start;
  margin: 10rpx 0;
  line-height: 1.5;
  padding-left: 8rpx;
  background: -webkit-gradient(linear, right top, left top, from(#ffffff), color-stop(#68bdfd), color-stop(#5676cc), color-stop(#68bdfd), to(#ffffff));
  background: -webkit-linear-gradient(right, #ffffff, #68bdfd, #5676cc, #68bdfd, #ffffff);
  background: linear-gradient(to left, #ffffff, #68bdfd, #5676cc, #68bdfd, #ffffff);
}
.user .infoBox .formBox .companys {
  margin: 10rpx 0;
  padding-left: 8rpx;
  text-align: start;
  line-height: 1.5;
  background: -webkit-gradient(linear, left top, right top, from(#ffffff), color-stop(#68bdfd), color-stop(#5676cc), color-stop(#68bdfd), to(#ffffff));
  background: -webkit-linear-gradient(left, #ffffff, #68bdfd, #5676cc, #68bdfd, #ffffff);
  background: linear-gradient(to right, #ffffff, #68bdfd, #5676cc, #68bdfd, #ffffff);
}
.user .user-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 57vw;
  padding: 30rpx;
  z-index: 9;
  border-radius: 0 0 12% 12%;
  background: url("https://youngbucket.oss-cn-hangzhou.aliyuncs.com/0b0fa999-6657-4da9-94a4-c1e8d05ba252.jpg") no-repeat;
  background-size: cover;
}
.user .user-wrap .setting {
  color: #fff;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}
.user .user-wrap .info {
  position: absolute;
  text-align: center;
}
.user .user-wrap .info .avatar {
  margin: 0 auto;
}
.user .user-wrap .info .nickname {
  color: #fff;
  font-size: 28rpx;
}

