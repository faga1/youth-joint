.videoBox {
  width: 100%;
}
.videoBox .video_info {
  width: 100%;
  height: 100vh;
  border: 1px solid #efefef;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0px 0px 2px #efefef;
  position: relative;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  /* 视频 */
}
.videoBox .video_info .video_video {
  width: 100%;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  border-radius: 15rpx;
}
.videoBox .video_info .video_video video {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.videoBox .video_info .allText {
  height: 73px;
}
.videoBox .video_info .allText .contentText {
  background: #fff;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  word-wrap: break-word;
}
.videoBox .video_info .allText .controls {
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 8rpx 30rpx 20rpx 30rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.videoBox .video_info .allText .controls .date {
  font-size: 22rpx;
  color: #999999;
}
.videoBox .video_info .allText .controls .controlsItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.videoBox .video_info .allText .controls .controlsItem .items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0rpx 20rpx;
  font-size: 18rpx;
  color: #999999;
}
.videoBox .video_info .allText .controls .controlsItem .items ._span {
  line-height: 30rpx;
}
.videoBox .video_info .allText .controls .controlsItem .items1 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0rpx 20rpx;
  font-size: 18rpx;
  color: #999999;
  border-right: 2px solid #999;
}
.videoBox .video_info .allText .controls .controlsItem .items1 ._span {
  line-height: 30rpx;
}

