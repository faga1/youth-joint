.searchBox {
  position: fixed;
  top: 0px;
  width: -webkit-fill-available;
  right: 0px;
  z-index: 99;
  background-color: #f2f2f2;
  display: flex;
  padding: 8rpx 10rpx;
}
.searchBox .sxBox {
  width: 120rpx;
}
.searchBox .inputBox {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.activeBox {
  margin-top: 88rpx;
  background: #fff;
}
.activeBox .activeItem {
  display: flex;
  padding: 20rpx 30rpx;
  position: relative;
}
.activeBox .activeItem .watchNum {
  display: flex;
  position: absolute;
  bottom: 10rpx;
  right: 34rpx;
  font-size: 24rpx;
}
.activeBox .activeItem .btn {
  position: absolute;
  right: 30rpx;
  bottom: 48rpx;
  font-size: 22rpx;
  height: 68rpx;
  line-height: 68rpx;
}
.activeBox .activeItem .activeImg {
  width: 230rpx;
}
.activeBox .activeItem .activeCont {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx;
}
.activeBox .activeItem .activeCont .actText {
  flex-grow: 1;
  word-wrap: break-word;
  word-break: normal;
  font-size: 30rpx;
  font-weight: 600;
}
.activeBox .activeItem .activeCont .actType {
  height: 44rpx;
  font-size: 24rpx;
  color: #ffaa00;
}
.activeBox .activeItem .activeCont .actTime {
  height: 44rpx;
  font-size: 22rpx;
  color: #999;
}
.activeBoxS {
  margin-top: 90rpx;
  padding: 10rpx 20rpx;
}
.activeBoxS .imgBox {
  border-radius: 6px;
  overflow: hidden;
  margin-bottom: 10rpx;
  position: relative;
  box-shadow: 0px 0px 3px #b0b0b0;
}
.activeBoxS .imgBox .title {
  position: absolute;
  bottom: 0px;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  font-size: 24rpx;
}

